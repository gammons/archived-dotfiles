#!/bin/sh
echo "video0"
v4l2-ctl -d /dev/video0 --set-ctrl=backlight_compensation=1
v4l2-ctl -d /dev/video0 --set-ctrl=brightness=100

echo "video1"
v4l2-ctl -d /dev/video1 --set-ctrl=backlight_compensation=1
v4l2-ctl -d /dev/video1 --set-ctrl=brightness=100

echo "video2"
v4l2-ctl -d /dev/video2 --set-ctrl=backlight_compensation=1
v4l2-ctl -d /dev/video2 --set-ctrl=brightness=100

echo "video3"
v4l2-ctl -d /dev/video3 --set-ctrl=backlight_compensation=1
v4l2-ctl -d /dev/video3 --set-ctrl=brightness=100

echo "video4"
v4l2-ctl -d /dev/video4 --set-ctrl=backlight_compensation=1
v4l2-ctl -d /dev/video4 --set-ctrl=brightness=100
echo "ok"
